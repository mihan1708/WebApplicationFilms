@model WebApplicationFilms.ViewModels.LoginViewModel

<link rel="stylesheet" href="~/css/Login_panel.css" />

<div class="login_panel">
    <h2>Вход в приложение</h2>
    <form method="post" asp-controller="Account" asp-action="Login"
          asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Email"></label><br />
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password"></label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="RememberMe"></label><br />
            <input asp-for="RememberMe" />
        </div>
        <div>
            <input type="submit" value="Войти" class="btn-primary"/>
        </div>
        <div>
            <a asp-controller="Account" asp-Action="ForgotPassword">Забыли пароль?</a>
        </div>
    </form>
</div>